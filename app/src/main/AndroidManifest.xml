<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wondertoys.pokevalue">

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.wondertoys.pokevalue.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.wondertoys.pokevalue.ToggleOverlayService"
            android:exported="false"></service>

        <service android:name="com.wondertoys.pokevalue.CalculateOverlayService"
            android:exported="false"></service>
    </application>

</manifest>
