<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- BORDER LAYER -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80deea"></solid>
            <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"></corners>
        </shape>
    </item>

    <!-- CONTENT LAYER -->
    <item android:left="2dp" android:bottom="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00acc1"></solid>
            <corners android:topLeftRadius="4dp" android:bottomLeftRadius="4dp"></corners>
        </shape>
    </item>
</layer-list>