<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="42dp"
    android:layout_height="wrap_content"
    android:touchscreenBlocksFocus="false"
    style="@style/ToggleOverlay"
    android:id="@+id/toggleContainer"
    android:animateLayoutChanges="true"
    android:paddingBottom="3dp"
    android:paddingRight="2dp"
    android:paddingLeft="4dp"
    android:paddingTop="3dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/more_vertical"
        android:id="@+id/imageMore"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:clickable="false"
        android:padding="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/functions"
        android:id="@+id/imageCalc"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@id/imageMore"
        android:padding="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:id="@+id/imageExit"
        android:clickable="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_toEndOf="@id/imageCalc"
        android:padding="6dp" />

</RelativeLayout>